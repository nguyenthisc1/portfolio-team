{
    "$schema": "https://turbo.build/schema.json",
    "ui": "tui",
    "globalEnv": ["AUTH_USERNAME", "AUTH_PASSWORD", "MONGODB_URL", "MONGODB_DB"],
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT$", ".env*"],
            "outputs": [".next/**", "!.next/cache/**", "dist/**"]
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "check-types": {
            "dependsOn": ["^check-types"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        }
    }
}
